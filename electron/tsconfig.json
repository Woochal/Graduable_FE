{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "../dist/electron",
        "rootDir": ".",
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react-jsx",
        "lib": ["DOM", "ES2020"],
        "types": ["node", "electron"]
    },
    "include": ["*.ts", "../src/types/electron-store.d.ts", "../src/types/electron.d.ts"],
    "exclude": ["node_modules", "../components", "../public", "../types"]
}
