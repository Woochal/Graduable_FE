{
    "name": "swproject",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "main": "dist/electron/main.js",
    "homepage": "./",
    "scripts": {
        "dev": "npm run build-electron && concurrently \"vite\" \"npm run electron:dev\"",
        "electron:dev": "wait-on http://localhost:5173 && electron . 5173",
        "build": "vite build",
        "build-electron": "rimraf dist/electron && tsc -p electron/tsconfig.json",
        "start": "vite preview",
        "lint": "eslint . --ext .ts,.tsx",
        "package": "npm run build && npm run build-electron && electron-forge package",
        "make": "npm run build && npm run build-electron && electron-forge make"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "chart.js": "^4.4.9",
        "dotenv": "^16.5.0",
        "electron-serve": "^2.1.1",
        "electron-squirrel-startup": "^1.0.1",
        "electron-store": "^10.0.1",
        "express": "^4.18.0",
        "framer-motion": "^12.9.4",
        "react": "^18",
        "react-chartjs-2": "^5.3.0",
        "react-dom": "^18",
        "react-router-dom": "^7.5.0",
        "react-table": "^7.8.0",
        "recoil": "^0.7.7",
        "styled-components": "^6.1.17"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.8.1",
        "@electron-forge/maker-deb": "^7.8.1",
        "@electron-forge/maker-rpm": "^7.8.1",
        "@electron-forge/maker-squirrel": "^7.8.1",
        "@electron-forge/maker-zip": "^7.8.1",
        "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
        "@electron-forge/plugin-fuses": "^7.8.1",
        "@electron-forge/plugin-webpack": "^7.8.1",
        "@electron/fuses": "^1.8.0",
        "@eslint/eslintrc": "^3",
        "@tailwindcss/postcss": "^4",
        "@types/express": "^4.17.21",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@types/react-router-dom": "^5.3.3",
        "@types/react-table": "^7.7.20",
        "@types/styled-components": "^5.1.34",
        "@vitejs/plugin-react": "^4.3.4",
        "concurrently": "^9.1.2",
        "electron": "^34.1.4",
        "electron-builder": "^26.0.12",
        "eslint": "^9.21.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^15.15.0",
        "postcss": "^8",
        "tailwind-merge": "^2.5.4",
        "tailwindcss": "^3.4.1",
        "tailwindcss-animate": "^1.0.7",
        "ts-loader": "^9.5.2",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.24.1",
        "vite": "^6.2.0",
        "wait-on": "^8.0.3",
        "webpack": "^5.99.8"
    },
    "build": {
        "appId": "com.swproject.app",
        "productName": "SWProject",
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "extraResources": [
            {
                "from": "dist",
                "to": "dist"
            }
        ],
        "directories": {
            "output": "out/make"
        },
        "protocols": [
            {
                "name": "Graduable Protocol",
                "schemes": [
                    "graduable"
                ]
            }
        ]
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "asar": true,
                "extraResource": [
                    "dist"
                ],
                "ignore": [
                    "node_modules/.bin",
                    "node_modules/.cache",
                    "node_modules/.vite"
                ]
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "swproject"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "plugins": [
                {
                    "name": "@electron-forge/plugin-auto-unpack-natives",
                    "config": {}
                }
            ]
        }
    }
}
