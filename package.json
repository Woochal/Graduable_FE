{
    "name": "swproject",
    "version": "0.1.0",
    "private": true,
    "main": "dist/electron/main.js",
    "homepage": "./",
    "scripts": {
        "dev": "npm run build-electron && concurrently \"vite\" \"npm run electron:dev\"",
        "electron:dev": "wait-on http://localhost:5173 && electron . 5173",
        "build": "vite build",
        "build-electron": "rimraf dist/electron && tsc -p electron/tsconfig.json",
        "start": "vite preview",
        "lint": "eslint . --ext .ts,.tsx",
        "package": "npm run build && npm run build-electron && electron-builder --dir",
        "make": "npm run build && npm run build-electron && electron-builder",
        "dist": "npm run build && npm run build-electron && electron-builder --mac",
        "afterSign": "scripts/notarize.js"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "chart.js": "^4.4.9",
        "dotenv": "^16.5.0",
        "electron-serve": "^2.1.1",
        "electron-squirrel-startup": "^1.0.1",
        "electron-store": "^8.2.0",
        "express": "^4.18.0",
        "framer-motion": "^12.9.4",
        "react": "^18",
        "react-chartjs-2": "^5.3.0",
        "react-dom": "^18",
        "react-router-dom": "^7.5.0",
        "react-table": "^7.8.0",
        "recoil": "^0.7.7",
        "styled-components": "^6.1.17"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@tailwindcss/postcss": "^4",
        "@types/express": "^4.17.21",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@types/react-router-dom": "^5.3.3",
        "@types/react-table": "^7.7.20",
        "@types/styled-components": "^5.1.34",
        "@vitejs/plugin-react": "^4.3.4",
        "concurrently": "^9.1.2",
        "electron": "^34.1.4",
        "electron-builder": "^26.0.12",
        "electron-notarize": "^1.2.2",
        "eslint": "^9.21.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^15.15.0",
        "postcss": "^8",
        "tailwind-merge": "^2.5.4",
        "tailwindcss": "^3.4.1",
        "tailwindcss-animate": "^1.0.7",
        "ts-loader": "^9.5.2",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.24.1",
        "vite": "^6.2.0",
        "wait-on": "^8.0.3",
        "webpack": "^5.99.8"
    },
    "build": {
        "appId": "com.se.graduable",
        "productName": "Graduable",
        "asar": true,
        "mac": {
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "target": [
                "dmg"
            ],
            "category": "public.app-category.education",
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist",
            "identity": "Minhyeok Kim (GXC72G385T)"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "extraResources": [
            {
                "from": "dist",
                "to": "dist"
            }
        ],
        "directories": {
            "output": "out/make"
        },
        "protocols": [
            {
                "name": "Graduable Protocol",
                "schemes": [
                    "graduable"
                ]
            }
        ],
        "dmg": {
            "sign": true
        },
        "afterSign": "scripts/notarize.js"
    },
    "description": "Graduable Application",
    "author": "Minhyeok Kim"
}
